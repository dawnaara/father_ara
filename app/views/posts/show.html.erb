    <!-- Fix padding. should be 50px of padding to make sure the navbar doesn't overlap content!  -->

<p id="notice"><%= notice %></p>

    <!-- Page Content -->
    <div class="container content-wrapper lead">

    <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-12">

                <!-- Title -->
                <h1 class="text-center"><%= @post.title %></h1>

                <!-- Date/Time -->
                <p class="date text-center"><%= time_ago_in_words(@post.created_at) %></p>

                <!-- Preview Image -->
                <!-- <img class="img-responsive center-block" src="http://placehold.it/900x300" alt=""> -->
				<img class="img-responsive center-block"<%= image_tag @post.image.url %>
                <hr>

                <!-- Post Content -->
                <p class="lead"><%= @post.body %></p>

                <% if user_signed_in? %>
                    <div id="admin_links">
                        <button type="submit" class="btn btn-default"><%= link_to "Edit", edit_post_path(@post) %></button>
                        <button type="submit" class="btn btn-default"><%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %></button>
                    </div>
                <% end %>

                <hr>                

                <!-- Blog Comments -->

			<button type="submit" class="btn btn-default"><%= link_to 'Back', posts_path %></button>
            </div>


        </div>
    <%= render 'disqus' %>
    </div>
        <!-- /.row -->

       

