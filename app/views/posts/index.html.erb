<!-- Fix padding. should be 50px of padding to make sure the navbar doesn't overlap content!  -->
<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Charlie's Thoughts
              <small>Words of wisdom</small>
          </h1>
      </div>
  </div>
  <!-- /.row -->

    <div class="row">
      <% @posts.each do |post| %>

          <!-- Blog Entries Column -->
        <div class="col-md-4">
          <%= image_tag post.image.url(:medium) %>
        </div>

          <!-- First Blog Post -->
          <div class="col-md-8">
            <h2 class="title"><%= link_to post.title, post %></h2>
            <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
          
            <p class="lead"><%=h truncate(post.body, :length => 220, :separator => ' ') %></p>

            <p><%= link_to 'Read More', post %><span class="glyphicon glyphicon-chevron-right"></span></p>
          

          </div>
        </div>
        <hr>
      <% end %>
    </div>
    
    <hr>

    <!-- Pager -->
    <ul class="pager">
        <li class="previous">
            <a href="#">&larr; Older</a>
        </li>
        <li class="next">
            <a href="#">Newer &rarr;</a>
        </li>
    </ul>

    <hr>
<!-- /.container -->
</div>








